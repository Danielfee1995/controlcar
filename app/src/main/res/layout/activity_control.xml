<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.legendpeng.controlcar.ControlActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageButton

                android:background="#00000000"
                android:id="@+id/imageButton3"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/green" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/show"
                android:textSize="30dp"
                android:id="@+id/textView5"/>
            <!--android:background="@drawable/device_name"/>-->
        </LinearLayout>

        <Button
            android:id="@+id/btn_abort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="back" />
    </RelativeLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/remote_body" />

    <ImageButton
        android:id="@+id/ib_up"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="119dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/upplan" />
        <!--android:src="@drawable/pointer" -->


    <ImageButton
        android:id="@+id/ib_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_toLeftOf="@+id/ib_right"
        android:layout_toStartOf="@+id/ib_right"
        android:background="@drawable/leftplan" />
        <!--android:src="@drawable/pointer_left" -->

    <ImageButton
        android:id="@+id/ib_down"
        android:layout_width="80dp"
        android:layout_height="80dp"


        android:layout_alignLeft="@+id/ib_up"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ib_up"
        android:layout_marginBottom="26dp"
        android:background="@drawable/downplan" />
        <!--android:src="@drawable/pointer_down" -->


    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:background="@drawable/rightplan"/>
        <!--android:src="@drawable/pointer_right" -->

</RelativeLayout>

</LinearLayout>
